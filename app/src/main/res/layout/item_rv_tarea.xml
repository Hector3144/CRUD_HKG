<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/rvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nombre" />

            <TextView
                android:id="@+id/rvApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Apellido" />

            <TextView
                android:id="@+id/rvCedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Cedula" />

            <TextView
                android:id="@+id/rvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Correo ElectrÃ³nico" />

            <TextView
                android:id="@+id/rvSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Sexo" />

            <!-- Reemplazar rvFoto con un ImageView -->
            <ImageView
                android:id="@+id/rvFoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:contentDescription="Foto seleccionada"
                android:src="@drawable/ic_placeholder" />

            <ImageButton
                android:id="@+id/ibtnBorrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/icon_delete" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
